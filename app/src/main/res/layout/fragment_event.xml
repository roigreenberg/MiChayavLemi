<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EventFragment">

    <include layout="@layout/content_event"/>

    <include layout="@layout/content_event_bottom_sheet"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/fab_new_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorButtonFab"
        app:layout_anchor="@id/content_event_bottom_sheet"
        app:layout_anchorGravity="top|end"
        app:srcCompat="@drawable/ic_action_add_fab" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>