<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10sp"
        android:elevation="2dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="328dp"
        android:layout_height="64dp">

    <TextView
        android:id="@+id/textViewEventDay"
        android:textSize="13sp"
        android:layout_marginTop="17dp"
        android:textStyle="bold"
        android:layout_marginLeft="280dp"
        android:textColor="@color/textColor"
        android:text="Mon,"
        android:layout_marginBottom="33.1dp"
        android:layout_marginRight="19.14dp"
        android:layout_width="30dp"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/textViewEventDate"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/textColor"
        android:layout_marginTop="30dp"
        android:text="June,12"
        android:layout_width="60dp"
        android:layout_height="19dp"/>

        <TextView
            android:id="@+id/textViewEventName"
            android:text="Event"
            android:textStyle="bold"
            android:layout_marginLeft="72.34dp"
            android:layout_marginTop="12.08dp"
            android:textColor="#555759"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/textViewEventLocation"
            android:text="Hasolelim 5, Tel-Aviv"
            android:textColor="#8C8C8C"
            android:layout_marginTop="33.64dp"
            android:layout_marginLeft="72.34dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </android.support.v7.widget.CardView>

</RelativeLayout>